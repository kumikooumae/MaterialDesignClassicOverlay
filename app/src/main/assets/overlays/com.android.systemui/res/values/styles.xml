<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="BrightnessDialogContainer" parent="@*com.android.systemui:style/BaseBrightnessDialogContainer">
        <item name="android:colorControlActivated">@android:color/white</item>
        <item name="android:colorBackgroundFloating">@*android:color/primary_material_dark</item>
        <item name="android:colorAccent">@*android:color/white</item>
    </style>

    <style name="qs_theme" parent="@*android:style/Theme.DeviceDefault">
        <item name="android:textColor">@android:color/white</item>

        <!-- Quick settings expanded signal icon -->
        <item name="android:colorForeground">@android:color/white</item>

        <!-- Page indicator, switch -->
        <item name="android:colorControlActivated">@android:color/white</item>

        <!-- Switch bar -->
        <item name="android:colorSecondary">@*android:color/secondary_device_default_settings</item>
        <item name="android:textColorPrimaryInverse">@*android:color/white</item>

        <!-- Inner color, cheat QSTileImpl.java -->
        <item name="android:colorPrimary">@*android:color/white</item>
        <item name="android:textColorSecondary">#9E9E9E</item>

        <!-- Button styles -->
        <item name="android:buttonCornerRadius">2dp</item>

        <!-- Volume dialog settings -->
        <item name="android:panelColorBackground">@*android:color/background_floating_material_dark</item>

        <!-- Volume dialog button accent -->
        <item name="android:colorAccent">@*android:color/white</item>

        <item name="android:colorError">@*android:color/error_color_material_dark</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:homeAsUpIndicator">@*com.android.systemui:drawable/ic_arrow_back</item>
    </style>
</resources>